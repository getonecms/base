{
    "name": "getonecms/ext-base",
    "description": "OneCMS base extension.",
    "type": "onecms-extension",
    "authors": [
        {
            "name": "Mohammed Shifreen",
            "email": "mshifreen@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "yiisoft/yii2": "~2.0",
        "ramsey/uuid": "^4.0",
        "yiisoft/yii2-swiftmailer": "~2.0.0 || ~2.1.0",
        "vlucas/phpdotenv": "^5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "rector/rector": "^0.12.19"
    },
    "autoload": {
        "psr-4": {
            "OneCMS\\Base\\": "src"
        },
        "files": [
            "src/global.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "OneCMS\\Base\\Test\\": "test"
        }
    },
    "optimize-autoloader": true,
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    }
}