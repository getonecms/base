{
    "name": "webifycms/ext-base",
    "description": "The WebifyCMS base extension serves as the foundation for the entire application, holding abstractions and reusable components.",
    "type": "webifycms-extension",
    "authors": [
        {
            "name": "Mohammed Shifreen",
            "email": "mshifreen@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "yiisoft/yii2": "~2.0",
        "yiisoft/yii2-swiftmailer": "~2.0.0 || ~2.1.0",
        "vlucas/phpdotenv": "^5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10",
        "webifycms/dev-tools": "^0.7"
    },
    "autoload": {
        "psr-4": {
            "Webify\\Base\\": "src/"
        },
        "files": [
            "src/Infrastructure/Helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Webify\\Base\\Test\\": "test/"
        }
    },
    "optimize-autoloader": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/webifycms/dev-tools"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    },
    "scripts": {
        "code-sniff": [
            "php-cs-fixer fix --verbose --dry-run --diff --show-progress=dots --using-cache=no"
        ],
        "code-format": [
            "php-cs-fixer fix --verbose --show-progress=dots"
        ],
        "code-analyze": [
            "phpstan"
        ],
        "test": [
            "phpunit --testdox test"
        ]
    }
}